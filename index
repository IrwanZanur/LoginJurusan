        }
        .tombol {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 20px;
            background-color: #3498db;
            color: #fff;
            font-size: 16px;
            cursor: pointer;
            text-transform: uppercase;
            margin-top: 10px;
        }
        .login-box {
            width: 350px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 20px;
            background-color: #fff;
            box-sizing: border-box;
            text-align: center;
        }
        .logo {
            display: block;
            margin: 0 auto 20px;
            width: 120px;
            height: 120px;
            object-fit: cover;
        }
        .warning {
            color: red;
            font-size: 14px;
            margin-top: -10px;
            margin-bottom: 10px;
            display: none;
