<body>
    <!-- Form Login -->
    <div class="login-box">
        <div class="judul">Login NIS - Kelas X</div>
        <img class="logo" src="https://lh3.googleusercontent.com/d/1Em6kwqdZfG27aKHEV8EUv4ehlKPCO_kN" alt="Logo Sekolah">

        <form onsubmit="return false;">
            <input type="number" name="nis" placeholder="Masukkan NIS" class="inputtext">
            <div id="peringatan" class="warning">NIS tidak terdaftar!</div>
            <input type="button" value="Login" class="tombol" onclick="login()">
        </form>
    </div>

    <script>
        const allowedNIS = [
            "2415980", "2415981", "2415982", "2415983", "2415984", "2415985",
            "2415986", "2415987", "2415988", "2415989", "2415990"
            // Tambahkan NIS lainnya sesuai kebutuhan
        ];

        const redirectURL = "https://sites.google.com/guru.smk.belajar.id/smkn-26-jakarta-kurikulum/sumatif-akhir-semester-genap/pelaksaan-sas/kelas-x";

        function login() {
            const nisInput = document.getElementsByName("nis")[0];
            const nis = nisInput.value.trim();
            const warning = document.getElementById("peringatan");

            if (allowedNIS.includes(nis)) {
                window.location.href = redirectURL;
            } else {
                warning.style.display = "block";
            }
        }

        document.getElementsByName("nis")[0].addEventListener("input", () => {
            document.getElementById("peringatan").style.display = "none";
        });
    </script>
